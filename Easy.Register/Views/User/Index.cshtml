@model IEnumerable<Easy.Register.Application.Models.User.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            操作员列表
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-th"></i> Home</a></li>
            <li class="active">操作员列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header" style="height:45px">
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>账号</th>
                                <th>姓名</th>
                                <th>创建时间</th>
                                <th style="width:110px">操作</th>
                            </tr>
                            @foreach (var m in Model)
                            {
                                <tr style="height:50px">
                                    <td>@m.Username</td>
                                    <td>
                                        @m.Name
                                    </td>
                                    <td>@m.CreateDate</td>
                                    <td style="position:absolute;">
                                        <div class="btn-group">
                                            <a class="btn btn-default" href="/user/updateuser?userId=@m.Id">编辑</a>
                                            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu" style="min-width:100px;">
                                                <li><a href="/user/editpassword?userId=@m.Id">修改密码</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div>


