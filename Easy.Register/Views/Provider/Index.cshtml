@model System.Collections.Generic.IEnumerable<Easy.Register.Application.Models.Node.Node>
@{
    ViewBag.Title = "提供者列表";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            提供者列表
            <small>（名称，描述）</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">提供者列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">提供者列表</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>Provider Name</th>
                                <th>Url</th>
                                <th>IsAvailable</th>
                                <th>Weight</th>
                            </tr>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@m.ProviderName</td>
                                        <td>@m.Url</td>
                                        @if (m.IsAvailable)
                                        {
                                            <td><span class="label label-success">@m.IsAvailable.ToString()</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="label label-danger">@m.IsAvailable.ToString()</span></td>
                                        }
                                        
                                        <td>@m.Weight</td>
                                    </tr>
                                }
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div>

