@model Easy.Register.Application.Models.Node.Node
@{
    ViewBag.Title = "修改节点";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            修改节点
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">修改节点</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="with-border">
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/Provider/Update" method="POST">
                        <div class="box-body">
                            <div class="form-group">
                                <label>API地址</label>
                                <input type="text" class="form-control" placeholder="API地址" name="url" value="@Model.Url">
                            </div>
                            <div class="form-group">
                                <label>IP地址</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-laptop"></i>
                                    </div>
                                    <input type="text" class="form-control" placeholder="IP"  name="ip" value = @Model.Ip>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>描述</label>
                                <input type="text" class="form-control" placeholder="描述" name="description" value="@Model.Description">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                        <input type="hidden" name="nodeId" value="@Model.Id"/>
                    </form>
                </div><!-- /.box -->
            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<script src="/Scripts/jquery.inputmask.js"></script>
<script src="/Scripts/jquery.inputmask.extensions.js"></script>
<script>
    $(function () {
        $("[data-mask]").inputmask();
    });
</script>