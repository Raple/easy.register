@model System.Collections.Generic.IEnumerable<Easy.Register.Application.Models.Directory.DirectoryModel>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            添加提供者
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">添加提供者</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">添加提供者</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/Provider/AddPost" method="POST">
                        <div class="box-body">
                            <div class="form-group">
                                <label>目录名称</label>
                                <select class="form-control" name="dir">
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var m in Model)
                                        {
                                            <option value="@m.Id">@m.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>API地址</label>
                                <input type="text" class="form-control" placeholder="API地址" name="api">
                            </div>
                            <div class="form-group">
                                <label>IP地址</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-laptop"></i>
                                    </div>
                                    <input type="text" class="form-control" data-inputmask="'alias': 'ip'" data-mask name="ip">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>描述</label>
                                <input type="text" class="form-control" placeholder="描述" name="description">
                            </div>
                            <div class="form-group">
                                <label>权重</label>
                                <input type="text" class="form-control" placeholder="权重" name="weight">
                            </div>
                            <div class="form-group">
                                <label>状态</label>
                                <select class="form-control" name="status">
                                    <option value="1">在线</option>
                                    <option value="2">下线</option>
                                </select>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div><!-- /.box -->
            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<script src="/Scripts/jquery.inputmask.js"></script>
<script src="/Scripts/jquery.inputmask.extensions.js"></script>
<script>
    $(function () {
        $("[data-mask]").inputmask();
    });
</script>