
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            添加目录
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-th"></i> Home</a></li>
            <li class="active">添加目录</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-10 col-lg-8">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">添加目录</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/directory/addpost" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>目录名称</label>
                                <input type="text" class="form-control" placeholder="目录名称" name="name">
                            </div>
                            <div class="form-group">
                                <label>API地址</label>
                                <input type="text" class="form-control" placeholder="API地址" name="ip">
                            </div>
                            <div class="form-group">
                                <label>版本API路径</label>
                                <input type="text" class="form-control" placeholder="版本API路径" name="path">
                            </div>
                            <div class="form-group">
                                <label>目录类型</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true" name="type">
                                    <option selected="selected" value="1">消费者</option>
                                    <option value="2">提供者</option>
                                    <option value="3">消费者提供者</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>描述</label>
                                <input type="text" class="form-control" placeholder="描述" name="content">
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div><!-- /.box -->
            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div>
<link rel="stylesheet" href="/Content/select2.min.css">
<script src="/Scripts/select2.full.min.js"></script>
<script src="/Scripts/jquery.inputmask.js"></script>
<script src="/Scripts/jquery.inputmask.extensions.js"></script>

<script>
    $(function() {
        //Initialize Select2 Elements
        $(".select2").select2();
        $("[data-mask]").inputmask();
    });
</script>