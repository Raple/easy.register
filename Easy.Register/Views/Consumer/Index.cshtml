@using Easy.Register.Application.Models.Node

@{
    ViewBag.Title = "消费者列表";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            消费者列表
            <small>（名称，描述）</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-files-o"></i> Home</a></li>
            <li class="active">消费者列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Responsive Hover Table</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>名称</th>
                                <th>IP地址</th>
                                <th>URL地址</th>
                                <th>权重</th>
                                <th>是否可用</th>
                            </tr>
                            @{
                                var list = ViewBag.list;
                                
                                foreach (Node item in list)
                                {
                                    var str = @item.IsAvailable ? "是" : "否";
                                    var labelStatus =@item.Weight;
                                    var labelMsg = string.Empty;
                                    switch (labelStatus)
                                    {
                                        case 1:
                                            labelMsg = "label-success";
                                            break;
                                        case 2:
                                            labelMsg = "label-warning";
                                            break;
                                        case 3:
                                            labelMsg = "label-primary";
                                            break;
                                        case 4:
                                            labelMsg = "label-danger";
                                            break;
                                    }
                                    <tr>
                                        <td>@item.ProviderName</td>
                                        <td>@item.Ip</td>
                                        <td>@item.Url</td>
                                        <td><span class="label @labelMsg">@item.Weight</span></td>
                                        <td>@str</td>
                                    </tr>
                                }
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div>
